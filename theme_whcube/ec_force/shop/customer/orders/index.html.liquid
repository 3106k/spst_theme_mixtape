<div class="wrap">
  <section class="cart">
    <div class="inner">
      <h2 class="page-title">購入履歴</h1>
        {% if orders == empty %}
          <p>購入履歴はありません。</p>
        {% else %}
          <table class="table-cart">
            <tr class="line">
              <th>購入日</th>
              <th>購入番号</th>
              <th>お支払い方法</th>
              <th>対応状況</th>
              <th>合計</th>
              <th></th>
            </tr>
            {% for order in orders %}
              <tr>
                <td>{{ order.completed_at | date: '%Y/%m/%d %H:%M' }}</td>
                <td>{{ order.number }}</td>
                <td>{{ order.payment.payment_method.name }}</td>
                <td>{{ order.human_state_name }}</td>
                <td>{{ order.total | number_to_currency: format: '%n %u' }}</td>
                <td><center><a class="refresh" href="/shop/customer/orders/{{ order.number }}">詳細</center></td>
              </tr>
            {% endfor %}
          </table>
        {% endif %}
    </div>
  </section>
</div>
