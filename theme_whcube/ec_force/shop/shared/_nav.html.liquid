                  {% if makeritems[0] != blank && makeritems[1] != blank %}
                    <li><a href='/shop/makers/{{ makeritems[1] | strip }}?q%5Bby_product_category_name%5D=レディース'>{{ makeritems[0] }}</a></li>
                  {% endif %}
                {% endfor %}
              </ul>
            </div>
          </li>
          {% for product_category in product_categories %}
            {% assign ignore_product_categories = 'レディース メンズ' | split: ' ' %}
            {% unless ignore_product_categories contains product_category.name %}
              <li><a href="/shop/product_categories/{{ product_category.id }}?q%5Bby_product_category_name%5D=レディース">{{ product_category.name }}</a></li>
            {% endunless %}
          {% endfor %}
          <li><a href="/shop/search?q%5Bvariants_is_sale_eq%5D=true&q%5Bby_product_category_name%5D=レディース" class="text-red">SALE</a></li>
          <li><a href="/shop/pages/aboutus">ABOUT US</a></li>
