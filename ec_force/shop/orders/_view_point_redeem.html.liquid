<div class="mb-3 bottom-space-big" id="view-point-redeem">
  {% if customer_signed_in %}
    {% if base_info.use_point? %}
      {% if base_info.point_event_redeem %}
        {% if current_customer.point <= base_info.point_event_redeem.point_upper_limit %}
          {% assign point_upper_limit = current_customer.point %}
        {% else %}
          {% assign point_upper_limit = base_info.point_event_redeem.point_upper_limit %}
        {% endif %}
        {% if current_customer.point <= base_info.point_event_redeem.point_lower_limit %}
          {% assign point_lower_limit = current_customer.point %}
        {% else %}
          {% assign point_lower_limit = base_info.point_event_redeem.point_lower_limit %}
        {% endif %}
        <h3 class="h6 fw-700 mb-2">ご利用ポイント</h3>
        <fieldset>
          <label class="fs-12">ご利用ポイント<span class="required-icon">※</span></label>
          <div class="full">
            <input class='form-control md validate[required,custom[integer],min[{{ point_lower_limit }}],max[{{ point_upper_limit }}]]' name='order[point_redeem]' type='text' value='{{ order.point_redeem or 0 }}'>
          </div>
          <p class="fs-13 lh-2 mt-1">現在の所持ポイント {{ current_customer.point | number_with_delimiter }}</p>
        </fieldset>
      {% endif %}
    {% endif %}
  {% endif %}
</div>
