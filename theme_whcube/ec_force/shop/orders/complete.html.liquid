    <table class="table-cart margin-bottom-20">
      <tr>
        <th class="width40">ご注文番号</th>
        <td>{{ order.number }}</td>
      </tr>
      <tr>
        <th>ご購入金額</th>
        <td>{{ order.total | number_to_currency: format: '%n %u' }}</td>
      </tr>
    </table>
    <center><a href="/shop/search" class="btn btn-black">ショップへ戻る</a></center>
